<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('/css/jquery-ui.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('/css/main.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <aside class="sidebar-left pull-left">
            {% block nav %}
                {{ knp_menu_render('BackendUchetBundle:Builder:mainMenu',
                {'template': 'BackendUchetBundle:Menu:knp_menu.html.twig'} ) }}
            {% endblock %}

            {% block form %}{% endblock %}

        </aside>
        <aside class="sidebar-right pull-right">
           {% block sidebar_right %} {{ render(controller('BackendUchetBundle:Default:sidebarright')) }} {% endblock %}
        </aside>
        <main>
            {% block body %}{% endblock %}
        </main>

        {% block javascripts %}
            <script src="{{ asset('/js/jquery.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/js/jquery-ui.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/js/main.js') }}" type="text/javascript"></script>
        {% endblock %}

    </body>
</html>